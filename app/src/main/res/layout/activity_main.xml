<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:weightSum="5"
    tools:context="com.immortal.awitd.wearme.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="1024dp"
            android:layout_height="100dp"
            android:src="@drawable/title_image" />
    </LinearLayout>




    <!--<Button-->
        <!--android:id="@+id/button_info"-->
        <!--android:paddingRight="16dp"-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:background="@drawable/info_icon_selector"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignEnd="@+id/linearLayout"-->
        <!--android:layout_marginEnd="67dp" />-->
    <com.immortal.awitd.wearme.FloatingActionMenu
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundTint="#4caf50"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        app:menu_fab_label=""
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="#ccffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


        <com.immortal.awitd.wearme.FloatingActionButton
            android:id="@+id/fab2"
            android:background="#4CAF50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music_icon_50_50"
            fab:fab_size="mini"
            fab:fab_label="Music" />

        <com.immortal.awitd.wearme.FloatingActionButton
            android:id="@+id/fab3"
            android:background="#4CAF50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_icon_50_50"
            fab:fab_size="mini"
            fab:fab_label="About" />

    </com.immortal.awitd.wearme.FloatingActionMenu>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:fab_size="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end|left"
        android:paddingBottom="10dp"
        android:src="@drawable/shopping_cart_32_32"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="#119809"
        android:background="@drawable/image_button_selector"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Asean Traditional Dressing"
        android:textColor="@color/white"
        android:id="@+id/textView_asean"
        android:layout_below="@+id/button_play"
        android:layout_alignParentEnd="true"
        android:ellipsize="middle" />
</RelativeLayout>
