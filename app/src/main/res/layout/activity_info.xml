<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:src="@drawable/myanmar_flag_275_183"
        android:id="@+id/imageView_country_flag"
        android:layout_alignTop="@+id/viewPageAndroid"
        android:layout_alignEnd="@+id/textView_country_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Myanmar"
        android:textColor="#fff"
        android:id="@+id/textView_country_name"
        android:layout_below="@+id/imageView_country_flag"
        android:layout_alignParentStart="true" />
</RelativeLayout>
